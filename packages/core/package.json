{
  "name": "@vibase/core",
  "version": "0.0.1",
  "description": "Postgres MCP server",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "type": "module",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "default": "./dist/index.js"
    },
    "./package.json": "./package.json"
  },
  "bin": {
    "vibase": "./dist/cli.js"
  },
  "files": [
    "dist",
    "README.md",
    "package.json"
  ],
  "engines": {
    "node": ">=18.0.0"
  },
  "scripts": {
    "build": "tsc --outDir dist",
    "test": "vitest",
    "dev": "tsx --watch src/index.ts",
    "dev:build": "tsc --watch --outDir dist",
    "prepublishOnly": "pnpm run build && pnpm exec vitest run"
  },
  "keywords": [
    "vibase",
    "mcp",
    "yaml",
    "postgresql",
    "server",
    "model-context-protocol",
    "database",
    "sql",
    "postgres"
  ],
  "author": "Vibase Team",
  "license": "Apache-2.0",
  "homepage": "https://github.com/your-org/vibase#readme",
  "repository": {
    "type": "git",
    "url": "https://github.com/vibase/vibase.git",
    "directory": "packages/core"
  },
  "bugs": {
    "url": "https://github.com/your-org/vibase/issues"
  },
  "packageManager": "pnpm@10.7.0",
  "devDependencies": {
    "@types/handlebars": "^4.1.0",
    "@types/js-yaml": "^4.0.9",
    "@types/node": "^24.0.3",
    "@types/pg": "^8.15.2",
    "@workspace/typescript-config": "workspace:*",
    "tsx": "^4.19.2",
    "typescript": "^5.8.3",
    "vitest": "^3.2.4"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.12.0",
    "commander": "^12.1.0",
    "handlebars": "^4.7.8",
    "js-yaml": "^4.1.0",
    "pg": "^8.16.3",
    "pg-sql2": "^4.14.1",
    "zod": "3.25.67",
    "zod-to-json-schema": "^3.24.6"
  }
}
